#!/usr/bin/env bash
# Project environment configuration for ollama-topic-forge

# Project identification
export PROJECT_NAME="ollama-topic-forge"
export PROJECT_ROOT="$(pwd)"

# Development environment
export EMACS_PROJECT_SESSION="${PROJECT_NAME}-emacs"
export EMACS_CONFIG_FILE="${PROJECT_ROOT}/${PROJECT_NAME}.el"

# Scheme/Guile development
export GUILE_LOAD_PATH="${PROJECT_ROOT}/src:${PROJECT_ROOT}/experiments:${GUILE_LOAD_PATH}"
export GUILE_AUTO_COMPILE=1

# Ollama configuration
export OLLAMA_HOST="${OLLAMA_HOST:-http://localhost:11434}"
export OLLAMA_MODEL="${OLLAMA_MODEL:-llama3}"

# Development tools
export EDITOR="${EDITOR:-emacs}"

# Load any local overrides
if [ -f .envrc.local ]; then
    source .envrc.local
fi

echo "Environment configured for ${PROJECT_NAME}"
echo "Project root: ${PROJECT_ROOT}"